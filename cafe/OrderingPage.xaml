<Page x:Class="cafe.OrderingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cafe"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="OrderingPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height =" auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Height="auto" Background="Gray">
            <TextBlock Text="User login" 
                        Margin="30,5,10,5"
                       VerticalAlignment="Center" FontSize="30"/>
            <Button Content="Log out" 
                    Margin="30,5,10,5"
                    VerticalAlignment="Center" Height="60" Width="150" FontSize="30" />
        </StackPanel>

        <Grid Grid.Row="1" Background="green">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width ="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Background="MidnightBlue">
                    <Grid.RowDefinitions>
                        <RowDefinition Height =" auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="Choco_Drinks" Margin="20,30" FontSize="20" Content="Choco Drinks" Width="160" Height="80" Background="#FFE62882"/>
                        <Button x:Name="Cold_Drinks"  Margin="20,30"  FontSize="20"   Content="Cold Drinks" Width="160" Height="80" Background="#FF0BD8E5"/>
                        <Button x:Name="Soft_Drinks"  Margin="20,30"   FontSize="20"  Content="Soft Drinks" Width="160" Height="80" Background="#FF01A8FE"/>
                        <Button x:Name="Coffee_Drinks"  Margin="20,30"  FontSize="20"   Content="Coffe Drinks" Width="160" Height="80" Background="#FFFF5F1F"/>
                        <Button x:Name="Tea_drinks"  Margin="20,30"  FontSize="20"  Content="Tea Drinks" Width="160" Height="80" Background="#FFFE019A" />

                    </StackPanel>

                    <Grid Grid.Row="1">

                        <ListView x:Name="ListViewProperty" Margin="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch">

                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" Orientation="Horizontal" Width="1400" HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                        <Rectangle Width="240" Height="240" RadiusY="120" RadiusX="120">
                                            <Rectangle.Fill>
                                                <ImageBrush ImageSource="https://images.pexels.com/photos/892649/pexels-photo-892649.jpeg" />
                                            </Rectangle.Fill>
                                        </Rectangle>
                                        <Label FontSize="18"
                                        VerticalAlignment="Center" HorizontalAlignment="Center"
                                         Content="by Jane Doan" FontFamily="Comic Sans MS" FontWeight="Bold" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            
                            <!--<ListViewItem >
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Rectangle Width="240" Height="240" RadiusY="120" RadiusX="120">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="https://images.pexels.com/photos/892649/pexels-photo-892649.jpeg" />
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <Label FontSize="18"
                                        VerticalAlignment="Center" HorizontalAlignment="Center"
                                         Content="by Jane Doan" FontFamily="Comic Sans MS" FontWeight="Bold" />
                                </StackPanel>
                            </ListViewItem>-->


                           
                            




                        </ListView>

                    </Grid>
                </Grid>

                <Grid Grid.Column="1" Background="#FF030D22"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
